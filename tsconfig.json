{
  "compilerOptions": {
    "target": "es2020",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "noEmit": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "baseUrl": ".",
    "module": "es6",
    "experimentalDecorators": true,
    "paths": {
      "jikan-ga-aru-client/tests/*": ["tests/*"],
      "jikan-ga-aru-client/*": ["app/*"],
      "*": ["types/*"]
    },
    "skipLibCheck": true,
    "types": [
      "ember-source/types",
      "@glint/environment-ember-loose",
      "@glint/environment-ember-loose/registry"
    ]
  },
  "glint": {
 "environment": [
      "ember-loose",
      "ember-template-imports",
    ],
    "template-strict": true,
    "checkStandaloneTemplates": true
  },
  "include": ["app/**/*", "tests/**/*", "types/**/*"]
}
